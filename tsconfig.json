{
   "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "disableSizeLimit": true,
      "lib": [ "DOM", "ESNext" ],
      "module": "ESNext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "target": "ES2015"
   },
   "include": [
      "./code/**/*.ts",
      "./languages/**/*.ts"
   ]
}